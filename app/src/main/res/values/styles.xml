<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button">
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="AlertButton" parent="Button">
        <item name="android:layout_width">128dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>
    <style name="AlertButton.Negative" parent="AlertButton">
        <item name="android:background">@drawable/negative_button_background</item>
    </style>
    <style name="AlertButton.Positive" parent="AlertButton">
        <item name="android:background">@drawable/positive_button_background</item>
    </style>
</resources>